# FubaMarket2 Production Environment Variables
# Copy this file to your server and update the values

# Django Settings
DJANGO_SETTINGS_MODULE=core.settings
DEBUG=False
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=your-domain.com,localhost,127.0.0.1

# Database (PostgreSQL recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/fubamarket2

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Email Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Media and Static Files
MEDIA_ROOT=/path/to/your/FubaMarket2/apps/api/media
STATIC_ROOT=/path/to/your/FubaMarket2/apps/api/static

# Security
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# CORS Settings
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Next.js Settings
NEXT_PUBLIC_API_URL=/api
NEXT_PUBLIC_APP_URL=https://your-domain.com
NODE_ENV=production

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/fubamarket2/django.log
